{
    "name": "emccode",
    "version": "1.0.0",
    "description": "The website for EMC{code}.",
    "author": "Andrew Kutz <sakutz@gmail.com>",
    "main": "index.html",
    "devDependencies": {
        "bower":                        "1.4.1",
        "coffee-script":                "1.9.2",

        "brunch":                       "1.8.2",

        "javascript-brunch":            "1.7.1",
        "coffee-script-brunch":         "1.8.1",
        "sass-brunch":                  "1.8.10",
        "css-brunch":                   "1.7.0",

        "ng-annotate-uglify-js-brunch": "1.8.0",
        "clean-css-brunch":             "1.7.2",
        "imageoptmizer-brunch":         "0.0.6",
        "gzip-brunch":                  "1.3.0",

        "browser-sync-brunch":          "0.0.9"
    },
    "scripts" : { 
        "preinstall" :     "bower install",
        "prebuild" :       "npm run-script clean && npm install",
        "build" :          "brunch b --production",
        "prestart" :       "npm run-script clean && npm install",
        "start" :          "brunch w --production --server",
        "predebug" :       "npm install",
        "debug" :          "npm run-script clean && brunch w --server",
        "predebug-build" : "npm install",
        "debug-build" :    "npm run-script clean && brunch b",
        "clean" :          "rm -fr public",
        "preclean-all":    "npm run-script clean",
        "clean-all" :      "rm -fr node_modules bower_components"
    },
    "engines": {
        "node": ">=0.10.0"
    }
}